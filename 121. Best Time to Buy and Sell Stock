class Solution {
        public int maxProfit(int[] prices) {
            int i = 0;
            int j = i + 1;
            int max = 0;
            while (j < prices.length) {
                if(prices[i] < prices[j]){
                    max = Math.max(max, prices[j]-prices[i]);
                } else {
                    i = j;
                }
                j++;
            }
            return max;
        }
    }
